/**index.wxss**/
.video-box{
  height: 100vh;
  position: relative;
}
.video-box video{
  display: block;
  width: 100%;
  height: 100vh;
}
.video-top{
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 30rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  z-index: 15;
}
.top-voice{
  width: 100%;
  overflow: hidden;
}
.voice-img{
  display: block;
  float: left;
  width: 45rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.voice-txt{
  color: #fff;
  font-size: 28rpx;
  font-weight: lighter;
  width: 60%;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 2rpx;
}
.voice-search{
  /* position: fixed;
  top: 30rpx;
  right: 30rpx; */
  display: block;
  float: right;
  width: 42rpx;
  height: 42rpx;
}
.top-nav{
  /* position: fixed;
  top: 70rpx;
  left: 50%;
  transform: translate(-50%); */
  overflow: hidden;
  margin-top: 50rpx;
  text-align: center;
}
.top-nav cover-view{
  color: rgba(255,255,255,.5);
  font-size: 28rpx;
  display: inline-block;
  margin-right: 20rpx;
  padding: 20rpx;
  position: relative;
}
.top-nav cover-view:last-child{
  margin-right: 0;
}
