/* pages/message/message.wxss */
page{
  background: #f5f5f5;
}
.message-nav,.message-content{
  background: #fff;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.nav-item{
  display: block;
  width: 25%;
  float: left;
  padding: 35rpx 0;
}
.nav-item image{
  display: block;
  width: 95rpx;
  height: 95rpx;
  margin: 0 auto 10rpx;
}
.nav-item text{
  display: block;
  color: #3e3e3e;
  font-size: 28rpx;
  text-align: center;
}
