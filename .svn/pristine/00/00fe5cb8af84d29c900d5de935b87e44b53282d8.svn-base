/* pages/person/person.wxss */
.head-box{
  overflow: hidden;
  background: #111;
  padding: 30rpx;
}
.head-top{
  overflow: hidden;
}
.head-left{
  width: 65%;
  float: left;
}
.head-right{
  width: 35%;
  float: right;
}
.head-img{
  display: block;
  width: 117rpx;
  height: 117rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin: 0 0 .2rem;
}
.head-name{
  color: #fff;
  font-size: 26rpx;
}
.head-info{
  color: rgba(255,255,255,.5);
  font-size: 22rpx;
  margin: 10rpx 0;
}
.head-profile{
  color: #828282;
  font-size: 20rpx;
}
.head-profile text{
  margin-right: 100rpx;
}
.head-profile text:last-child{
  margin-right: 0;
}

.right-btn{
  float: right;
  overflow: hidden;
  margin-bottom: 15rpx;
}
.attention-btn,.setting-btn{
  float: left;
  width: 118rpx;
  height: 56rpx;
  line-height: 54rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  background: #d50818;
  border-radius: 5rpx;
}
.attention-btn::after,.setting-btn::after{
  border: 0;
}
.attention-img image{
  display: inline-block;
  width: 34rpx;
  height: 33rpx;
  vertical-align: middle;
  margin: 0 0 5rpx 0;
}
.attention-img{
  background: #7e7e7e;
}
.setting-btn{
  width: 92rpx;
  background: #383735;
  margin-left: 12rpx;
}
.setting-btn image{
  display: inline-block;
  width: 33rpx;
  height: 33rpx;
  vertical-align: middle;
  margin: 0 0 6rpx 0;
}
.right-code{
  float: right;
  overflow: hidden;
}
.right-code image{
  width: 133rpx;
  height: 135rpx;
  display: block;
  float: right;
  margin-bottom: 8rpx;
}
.right-code text{
  display: block;
  color: rgba(255,255,255,.5);
  font-size: 20rpx;
  margin-right: 18rpx;
  text-align: center;
}
.head-mess{
  color: #dcdcdc;
  font-size: 26rpx;
  overflow: hidden;
  margin: 25rpx 0;
}
.head-mess text{
  font-size: 30rpx;
  margin-left: 10rpx;
}
.head-mess view{
  margin-right: 70rpx;
  float: left;
}
.head-mess view:last-child{
  margin-right: 0;
}

.label-box{
  display: inline-block;
}
.label-box .label-item,.add-label{
  display: block;
  float: left;
  color: #828282;
  font-size: 20rpx;
  padding: 10rpx 13rpx;
  border-radius: 20rpx;
  background: #33322f;
  margin: 0 15rpx 15rpx 0;
}
.add-label{
  margin-right: 0;
}


.person-content{
  overflow: hidden;
  background: #fff;
}
.person-item{
  width: 33.333%;
  height: 90rpx;
  line-height: 90rpx;
  float: left;
  text-align: center;
  color: #303030;
  font-size: 28rpx;
  position: relative;
  overflow: hidden;
}
.person-item.active{
  color: #d50818;
}
.person-item.active::after{
  content: "";
  display: block;
  width: 80%;
  height: 5rpx;
  background: #e1291d;
  position: absolute;
  left: 10%;
  bottom: 0;
}

.nav-box{
  overflow: hidden;
}
.content-item{
  width: 33%;
  float: left;
  margin: 0 0.5% 0.5% 0;
  position: relative;
}
.content-item:nth-child(3n){
  margin-right: 0;
}
.content-item image{
  display: block;
  width: 100%;
}
.item-layer{
  position: absolute;
  left: 30rpx;
  bottom: 18rpx;
  color: #fff;
  font-size: 24rpx;
}
.item-layer image{
  display: inline-block;
  width: 27rpx;
  height: 30rpx;
  vertical-align: middle;
  margin: 0 10rpx 8rpx 0;
}

.fix-box-shadow{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  left: 0;
  top: 0;
  z-index: 10;
}
.fix-setting-box{
  width: 70%;
  overflow: hidden;
  background: #fff;
  position: fixed;
  left: 15%;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 10rpx;
  padding-bottom: 100rpx;
  z-index: 20;
}
.fix-setting-box image{
  display: block;
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin: 10rpx 15rpx 0 0;
}
.fix-setting-box navigator{
  padding: 30rpx 40rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E9E9E9;
  color: #303030;
  font-size: 26rpx;
}